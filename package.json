{
  "name": "react-native-magnus",
  "version": "1.0.63",
  "description": "A Utility-First React Native UI Framework",
  "main": "lib/commonjs/index.js",
  "module": "lib/module/index.js",
  "types": "lib/typescript/index.d.ts",
  "react-native": "src/index.tsx",
  "source": "src/index.tsx",
  "files": [
    "src",
    "lib",
    "android",
    "ios",
    "react-native-magnus.podspec"
  ],
  "scripts": {
    "test": "jest",
    "typescript": "tsc --noEmit",
    "lint": "eslint --ext .js,.ts,.tsx .",
    "prepare": "bob build && husky install",
    "pre-commit": "pretty-quick --staged && yarn typescript",
    "release": "release-it",
    "example": "yarn --cwd example",
    "docs": "yarn --cwd docs",
    "bootstrap": "yarn example && yarn docs && yarn"
  },
  "keywords": [
    "react-native",
    "ios",
    "android"
  ],
  "repository": "https://github.com/jsartisan/react-native-magnus",
  "author": "jsartisan <pawan.stardust@gmail.com> (https://github.com/jsartisan)",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/jsartisan/react-native-magnus/issues"
  },
  "homepage": "https://github.com/jsartisan/react-native-magnus#readme",
  "dependencies": {
    "deepmerge": "^4.2.2",
    "validate-color": "^2.2.4"
  },
  "devDependencies": {
    "@babel/core": "^7.23.7",
    "@babel/runtime": "^7.23.7",
    "@commitlint/config-conventional": "^18.4.3",
    "@react-native-community/eslint-config": "^3.2.0",
    "@release-it/conventional-changelog": "^8.0.1",
    "@types/color": "^3.0.6",
    "@types/jest": "^29.5.11",
    "@types/react": "18.2.47",
    "@types/react-native": "0.73.0",
    "@types/react-native-vector-icons": "^6.4.12",
    "@types/react-test-renderer": "18.0.7",
    "babel-jest": "^29.7.0",
    "color": "^4.2.3",
    "commitlint": "^18.4.3",
    "editorconfig": "^2.0.0",
    "eslint": "^8.56.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-ft-flow": "^3.0.11",
    "eslint-plugin-prettier": "^5.1.2",
    "husky": "^8.0.3",
    "jest": "^29.7.0",
    "metro-react-native-babel-preset": "^0.77.0",
    "prettier": "^3.1.1",
    "pretty-quick": "^4.0.0",
    "react": "18.2.0",
    "react-native": "0.73.1",
    "react-native-builder-bob": "^0.23.2",
    "react-native-testing-library": "^6.0.0",
    "react-test-renderer": "18.2.0",
    "release-it": "^17.0.1",
    "typescript": "^5.3.3"
  },
  "peerDependencies": {
    "color": "^4.2.3",
    "deepmerge": "^4.2.2",
    "react": "*",
    "react-native": "*",
    "react-native-vector-icons": "9.2.0",
    "validate-color": "^2.2.1"
  },
  "jest": {
    "preset": "react-native",
    "modulePathIgnorePatterns": [
      "<rootDir>/example/node_modules",
      "<rootDir>/lib/",
      "<rootDir>/docs/"
    ]
  },
  "release-it": {
    "git": {
      "requireUpstream": false,
      "commitMessage": "chore: release ${version}",
      "tagName": "v${version}"
    },
    "npm": {
      "publish": true
    },
    "github": {
      "release": true
    },
    "plugins": {
      "@release-it/conventional-changelog": {
        "preset": "angular"
      }
    }
  },
  "react-native-builder-bob": {
    "source": "src",
    "output": "lib",
    "targets": [
      "commonjs",
      "module",
      "typescript"
    ]
  }
}
